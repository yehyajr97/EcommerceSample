<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Manrope:wght@200;300;400;500;600;700;800&display=swap"
          rel="stylesheet">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/styling/style_layout.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body style="padding:0px;">
    <nav>
        <div class="container">
            <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 border-bottom">
                <a href="/" class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                    <img src="~/Content/images/logo.svg" alt="">
                </a>
                <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                    <li>  @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link active" })</li>
                    <li>  @Html.ActionLink("HEADPHONES", "Index", "product", null, new { @class = "nav-link active" })</li>
                      <li> @Html.ActionLink("EARPHONES", "Index", "product", null, new { @class = "nav-link active" })</li>
                     <li>   @Html.ActionLink("SPEAKERS", "Index", "product", null, new { @class = "nav-link active" })</li> 
                    
                </ul>
                <div class="col-md-3 text-end">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @Html.ActionLink("LogOut", "Logout", "Account", null, new { @class = "btn btn - outline - primary me - 2 mx-1" })
                    }
                    else
                    {
                        @Html.ActionLink("Sign-up", "Register", "Account", null, new { @class = "btn btn - outline - primary me - 2 mx-1" })
                        @Html.ActionLink("Sign-in", "Login", "Account", null, new { @class = "btn btn - outline - primary me - 2 mx-1" })
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        @Html.ActionLink("+ dmin", "Register", "Admin", null, new { @class = "btn btn - outline - primary me - 2 mx-1" })
                        @Html.ActionLink("+ Product", "create", "Product", null, new { @class = "btn btn - outline - primary me - 2 mx-1" })
                        @Html.ActionLink("+ Category", "create", "category", null, new { @class = "btn btn - outline - primary me - 2 mx-1" })

                    }
                </div>
            </header>
        </div>
    </nav>

        @RenderBody()
   
        <footer>
            <div class="container">
                <div class="info">
                    <div class="row">
                        <div class="col-lg-6 text-md-center">
                            <a href="/"
                               class="d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none">
                                <img src="~/Content/images/logo.svg" alt="logo">
                            </a>
                        </div>
                        <div class="col-lg-6">
                            <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0" style="float: right;">
                                <li><a href="#" class="nav-link active">Home</a></li>
                                <li><a href="#" class="nav-link">HEADPHONES</a></li>
                                <li><a href="#" class="nav-link">EARPHONES</a></li>
                                <li><a href="#" class="nav-link">EARPHONES</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="row" style="margin: 40px 0">
                        <div class="col-lg-6" style="padding: 0;">
                            <p>
                                Audiophile is an all in one stop to fulfill your audio needs. We're a small team of music
                                lovers
                                and sound specialists who are devoted to helping you get the most out of personal audio.
                                Come
                                and visit our demo facility - we’re open 7 days a week.
                            </p>
                        </div>
                        <div class="col-lg-6 social-media">
                            <i class="fab fa-facebook-square"></i>
                            <i class="fab fa-twitter" aria-hidden="true"></i>
                            <i class="fab fa-instagram" aria-hidden="true"></i>
                        </div>
                    </div>
                    <div class="row">
                        <p>Copyright 2021. All Rights Reserved</p>
                    </div>
                </div>
            </div>
        </footer>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>
    @*@Scripts.Render("~/bundles/bootstrap")*@
    @Scripts.Render("~/Scripts/bootstrap.bundle.js")
    @RenderSection("scripts", required: false)
</body>
</html>




